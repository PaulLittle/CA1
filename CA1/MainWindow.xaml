<Window x:Class="CA1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CA1"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel Background="black">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Margin="10" Background="AliceBlue">
            <Button Name="btnAddRoom" Margin="10,2" Click="btnAddRoom_Click">Add _Room</Button>
            <Label Name="lblOccupancy" Margin="10,0">% Occupancy</Label>
            <TextBlock Name="tbkOccupancy" VerticalAlignment="Center" FontWeight="Bold">99%</TextBlock>
            <Label Name="lblBeforeNoon" Margin="10,0">% Before Noon</Label>
            <TextBlock Name="tbkBeforeNoon" VerticalAlignment="Center" FontWeight="Bold">9%</TextBlock>
        </StackPanel>
        <ListBox Name="lbxRooms" Margin="5" FontSize="14" Background="AliceBlue"></ListBox>
    </DockPanel>
</Window>
